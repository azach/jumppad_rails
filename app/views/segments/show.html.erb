<%= page_title @trip.title %>

<div class="hero-unit">
  <h1><%= @segment.location.nil? ? "Your Segment" : @segment.location %></h1>
  <h5><%= "From #{@segment.start_date.nil? ? 'whenever' : @segment.start_date.to_date} to #{@segment.end_date.nil? ? 'one day...' : @segment.end_date.to_date }" %></h5>
  <p><%= @segment.description %></p>
</div>

<div class="row">
  <div class="span5">  
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=350x200&sensor=false&zoom=12&markers=#{@segment.latitude}%2C#{@segment.longitude}" unless @segment.longitude.nil? && @segment.latitude.nil? %>
  </div>
</div>

<%= link_to 'Edit', edit_trip_segment_path(@trip, @segment.position) %> |
<%= link_to 'Back', trip_path(@trip) %>