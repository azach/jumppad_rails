<%= page_title @trip.title %>

<div class="hero-unit">
	<h1><%= @segment.title.nil? ? "Your Segment" : @segment.title %></h1>
	<h5><%= "From #{@segment.start_date.nil? ? 'whenever' : @segment.start_date.to_date} to #{@segment.end_date.nil? ? 'one day...' : @segment.end_date.to_date }" %></h5>
	<p><%= @segment.description %></p>
	<%= link_to 'Edit', edit_trip_segment_path(@trip, @segment.position) %> |
	<%= link_to 'Back', trip_path(@trip) %>
</div>