<%= form_for(@trip) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation" class="alert-message block-message error">
      <%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
  	<div class="clearfix">
    <%= label_tag(:title, "Title:") %>
    <div class="input">
    <%= text_field_tag :title, @trip.title %>
    </div>
    </div>

    <div class="clearfix">
    <%= label_tag(:description, "Description:") %>
    <div class="input">
  	<%= text_area_tag :description, @trip.description, :class => 'xxlarge', :rows => 3, :maxlength => 255 %>
  	</div>
  	</div>

		<div class="clearfix">
		<%= label_tag("Start Date") %>
		<div class="input">	
  	<%= select_date @trip.start_date.nil? ? Date.today : @trip.start_date, :prefix => :start_date %>
  	</div>
  	</div>

  	<div class="clearfix">
  	<%= label_tag("End Date") %>
  	<div class="input">
  	<%= select_date @trip.end_date.nil? ? Date.today + 1.week : @trip.end_date, :prefix => :end_date %>
  	</div>
  	</div>

		<div class="input">
		<%= submit_tag 'Save Trip', :class => 'btn primary' %>    
    <%= link_to 'Cancel', trips_path, :class => 'btn' %>
		</div>

    </div>
  </div>
<% end %>